{{define "widget-header"}}
<h3 class="name">{{.}}</h3>
{{end}}

{{define "widget"}}
<div class="widget">
{{template "widget-header" .Name}}
<span class="price">${{.Price}}</span>
</div>
{{end}}


{{define "footer"}}
  <footer>
  <hr>
    <p>
      Contributions welcome at <a href="https://github.com/emilyagras/AgentGopher">github.com/emilyagras/AgentGopher</a>!
    </p>
  </footer>
{{end}}


{{range .Widgets}}
{{template "widget" .}}
{{end}}

{{template "footer"}}